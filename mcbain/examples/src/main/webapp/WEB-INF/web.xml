<?xml version="1.0" encoding="ISO-8859-1"?>
                                                                                           
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
                                                                                           
<web-app>
    <display-name>Blog</display-name>
    <description>Example blog application</description>

    <filter>
        <filter-name>blog</filter-name>
        <filter-class>org.mcbain.servlet.ApplicationFilter</filter-class>
        <init-param>
	        <param-name>application</param-name>
	        <param-value>org.mcbain.examples.blog.BlogApplication</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>blog</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
</web-app>
